<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- ============ PRIVACY PERMISSIONS ============ -->
    <!-- Location Permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app needs access to location when open to provide location-based services.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>This app needs access to your location to provide location-based services even when closed.</string>
    <key>NSLocationAlwaysUsageDescription</key>
    <string>This app needs access to your location to provide background location services.</string>
    
    <!-- Phone Call Permission -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Required for making phone calls to customer service</string>
    
    <!-- ============ APP CONFIGURATION ============ -->
    <key>CFBundleDisplayName</key>
    <string>Gag Cars Frontend</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>gag_cars_frontend</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleSignature</key>
    <string>????</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- ============ URL SCHEMES & QUERIES ============ -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <!-- Core Schemes -->
        <string>tel</string>
        <string>telprompt</string>  <!-- For better iOS call handling -->
        <string>sms</string>
        <string>mailto</string>
        <string>http</string>
        <string>https</string>
        
        <!-- Social Media Schemes -->
        <string>whatsapp</string>
        <string>fb</string>
        <string>facebook</string>  <!-- Alternative FB scheme -->
        <string>twitter</string>
        <string>instagram</string>
        
        <!-- Maps & Navigation -->
        <string>comgooglemaps</string>
        <string>maps</string>
    </array>

    <!-- Enhanced Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>gagcars.com</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSExceptionMinimumTLSVersion</key>
                <string>TLSv1.2</string>
            </dict>
            <key>google.com</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSThirdPartyExceptionMinimumTLSVersion</key>
                <string>TLSv1.2</string>
            </dict>
        </dict>
    </dict>

    <!-- ============ UI CONFIGURATION ============ -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIMainStoryboardFile</key>
    <string>Main</string>
    
    <!-- Orientation Settings -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- Status Bar Configuration -->
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <false/>
    
    <!-- Performance Optimizations -->
    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    
    <!-- Background Modes (if using background location) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
    </array>
</dict>
</plist>